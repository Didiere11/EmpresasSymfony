{% block body %}
    <div class="row">
        <div class="col s12 m8 offset-m2">
            <div class="card">
            <form id="frm-acceso" method="post"> 
            <a id="add-record" class="btn-floating btn-large waves-effect waves-light right blue">
                   <i class="material-icons">person_add</i> 
                </a>
                <div class="card-content">
                    <span class="card-title" align="center">Empresas</span>
                    <table id="usrs" class="highlight border datatable">
                        <thead>
                            <tr><th>Nombre</th><th>Direccion</th><th>Correo</th><th>Descripción</th><th>Telefono</th><th></th></tr>
                        </thead>
                        <tbody>
                            
                            

                            <tr id="10"><td>InfoExpo S.C</td><td>Parque bajio 118</td><td>infoexpor@info.com</td><td>Desarrollo de software</td><td>4612304897</td><td>
