					</div>
				</div>

				{% endfor %}

			</div>

			</div>
		</div>

		</section>
	
	<section>
    <h3 class="blue-text" align="center">Empresas</h3>
		<div class="row">
			{% for empresa in content['empresas'] %}
				<div class="col s12 m4">
					<div class="card">
						<div class="card-image waves-effect waves-block waves-light">

							<img class="activator" src="data:{{empresa.formatoimagen}};base64,{{ empresa.rutaimagen }}" width="250px" height="250px">
							<img class="activator">
						</div>
						<div class="card-content">
							<span class="card-title activator grey-text text-darken-4">{{ empresa.nombreempresa }}<i class="material-icons right">more_vert</i>
							</span>
							<p>
								<a></a>
								{{ empresa.correoempresa }}</p>
						</div>
						<div class="card-reveal">
							<span class="card-title grey-text text-darken-4">{{ empresa.nombreempresa }}<i class="material-icons right">close</i>
							</span>
							<h6>
								<h6>
									Direccion:
								</h6>
								<p>
									{{ empresa.direccionempresa }}
								</p>
								<h6>
									Correo:
								</h6>
								<p>
									{{ empresa.correoempresa }}
								</p>
								<h6>
									Descripción de la empresa:
								</h6>
								<p>
									{{ empresa.descripcionempresa }}
								</p>
								<h6>
									Telefono:
								</h6>
								<p>
									{{ empresa.telefonoempresa }}
								</p>
							</div>
						</div>

					</div>
				{% endfor %}
			</div>
		</section>

	{% endblock %}
