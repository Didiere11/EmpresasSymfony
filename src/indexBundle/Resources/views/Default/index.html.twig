{% extends 'base.html.twig' %}
{% block title %}Index
{% endblock %}
{% block body %}

	<section>
		<div class="parallax-container">
			<div class="parallax"><img src="{{asset('img/img4.jpg')}}"></div>
		</div>
	</section>

	<section>
		<h3 class="blue-text" align="center">Lo más reciente</h3>
		<div class="carousel">
			{% for empresa in content['empresas'] %}
				<a class="carousel-item" href="#one!"><img src="data:{{empresa.formatoimagen}};base64,{{ empresa.rutaimagen }}" width="150px" height="200px"></a>
			{% endfor %}
		</div>
	</section>

	<section>
		<div class="parallax-container">
			<div class="parallax"><img src="{{asset('img/img3.jpg')}}"></div>
		</div>
	</section>

	<section>
		<h3 class="blue-text" align="center">Empresas</h3>

		<div class="row">
			{% for empresa in content['empresas'] %}
				<div class="col s6 m6 l4">
					<div class="card">
						<div class="card-image waves-effect waves-block waves-light">
              <img class="" src="data:{{empresa.formatoimagen}};base64,{{ empresa.rutaimagen }}" width="250px" height="250px">
              <img class="activator">
            </div>
            <div class="card-content">
              <span class="card-title grey-text text-darken-4">{{ empresa.nombreempresa }} </span> 
              <span id="more"class="card-title activator grey-text text-darken-4"><i class="material-icons right" idempresa="{{ empresa.idempresa }}">more_vert</i></span>
              <p>
                <a></a>
                {{ empresa.correoempresa }}</p>
            </div>
            <div class="card-reveal">
              <span class="card-title grey-text text-darken-4">{{ empresa.nombreempresa }}<i  class="material-icons right" >close</i>
              </span>
              <h6>
                <h6>
                  Direccion:
                </h6>
                <p>
                  {{ empresa.direccionempresa }}
                </p>
                <h6>
                  Correo:
                </h6>
                <p>
                  {{ empresa.correoempresa }}
                </p>
                <h6>
                  Descripción de la empresa:
                </h6>
                <p>
                  {{ empresa.descripcionempresa }}
                </p>
                <h6>
                  Telefono:
                </h6>
                <p>
                  {{ empresa.telefonoempresa }}
                </p>
              </div>
            </div>

					</div>
				{% endfor %}
			</div>
		</section>

	{% endblock %}

	{% block javascripts %}
		{{parent()}}
		<script type="text/javascript" src="{{ asset('js/dropzone_up.js') }}"></script>
		<script type="text/javascript">
			var Empresas = {{ content['empresas']|json_encode()|raw }};
var insertarvis = "{{ path('index_homepage_insertarvista') }}";
var urlprincipal = "{{ path('index_homepage' ) }}";
		</script>
		<script type="text/javascript" src="{{ asset('js/materialize.min.js') }}"></script>
		<script type="text/javascript" src="{{ asset('js/jquery.dataTables_.min.js') }}"></script>
		<script type="text/javascript" src="{{ asset('js/dataTables.materialize.js') }}"></script>
		<script type="text/javascript" src="{{ asset('Resources/catalogoEmp.js') }}"></script>
		<script type="text/javascript" src="{{ asset('js/new.js') }}"></script>
		<script type="text/javascript" src="{{ asset('js/jquery-3.2.1.min.js') }}"></script>
		<script type="text/javascript" src="{{ asset('js/materialize.js') }}"></script>
		<script type="text/javascript" src="{{ asset('js/jquery.dataTables.min.js') }}"></script>
	{% endblock %}
