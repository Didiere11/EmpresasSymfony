{% block body %}




<!-- Section: Slider -->
<section class="slider">
	<ul class="slides">
		{% for empresa in content['empresas'] %}
		<li>
			<img src="data:{{empresa.formatoimagen}};base64,{{ empresa.rutaimagen }}" width="250px" height="250px" alt="">
			<div class="caption center-align">
				<h2>{{ empresa.nombreempresa }}</h2>
				<h5 class="light green-text text hide-on-small-only">{{ empresa.correoempresa }}</h5>
			</div>
		</li>
		{% endfor %}
	</ul>
</section>



<!-- Section: Icon Boxes -->
<section class="section section-icons grey lighten-4 center">
	<div class="container">
		<div class="row">
			<div class="col s12 m4">
				<div class="card-panel">
					<i class="material-icons large teal-text">room</i>
					<h4>Pick Where</h4>
					<p>Lorem ipsum dolor sit amet consectetur, adipisicing elit. Quidem, velit.</p>
				</div>
			</div>
			<div class="col s12 m4">
				<div class="card-panel">
					<i class="material-icons large teal-text">store</i>
					<h4>Travel Shop</h4>
					<p>Lorem ipsum dolor sit amet consectetur, adipisicing elit. Quidem, velit.</p>
				</div>
			</div>
			<div class="col s12 m4">
				<div class="card-panel">
					<i class="material-icons large teal-text">airplanemode_active</i>
					<h4>Fly Cheap</h4>
					<p>Lorem ipsum dolor sit amet consectetur, adipisicing elit. Quidem, velit.</p>
				</div>
			</div>
		</div>
	</div>
</section>

<!-- Section: Popular -->
<section id="popular" class="section section-popular scrollspy">
		<div class="row">
			{% for empresa in content['empresas'] %}
			  <div class="col s6 m6 l4">
				<div class="card">
				  <div class="card-image waves-effect waves-block waves-light">
					<img class="" src="data:{{empresa.formatoimagen}};base64,{{ empresa.rutaimagen }}" width="250px" height="250px">
					<img class="activator">
				  </div>
				  <div class="card-content">
					<span class="card-title grey-text text-darken-4">{{ empresa.nombreempresa }} </span> 
					<span id="more"class="card-title activator grey-text text-darken-4"><i class="material-icons right" idempresa="{{ empresa.idempresa }}">more_vert</i></span>
					<p>
					  <a></a>
					  {{ empresa.correoempresa }}</p>
				  </div>
				  <div class="card-reveal">
					<span class="card-title grey-text text-darken-4">{{ empresa.nombreempresa }}<i  class="material-icons right" >close</i>
					</span>
					<h6>
					  <h6>
						Direccion:
					  </h6>
					  <p>
						{{ empresa.direccionempresa }}
					  </p>
					  <h6>
						Correo:
					  </h6>
					  <p>
						{{ empresa.correoempresa }}
					  </p>
					  <h6>
						Descripción de la empresa:
					  </h6>
					  <p>
						{{ empresa.descripcionempresa }}
					  </p>
					  <h6>
						Telefono:
					  </h6>
					  <p>
						{{ empresa.telefonoempresa }}
					  </p>
					</div>
				  </div>
	  
				</div>
			  {% endfor %}
			</div>
		<div class="row">
			<div class="col s12 center">
				<a id="empresa-nuevo" class="btn btn-large grey darken-3">
					<i class="material-icons left">send</i> Registrar Empresa
				</a>
			</div>
		</div>
	</div>
</section>

<!-- Section: Follow -->
<section class="section section-follow teal darken-2 white-text center">
	<div class="container">
		<div class="row">
			<div class="col s12">
				<h4>Follow Travelville</h4>
				<p>Follow us on social media for special offers</p>
				<a href="htttps://facebook.com" target="_blank" class="white-text">
					<i class="fab fa-facebook fa-4x"></i>
				</a>
				<a href="htttps://twitter.com" target="_blank" class="white-text">
					<i class="fab fa-twitter fa-4x"></i>
				</a>
				<a href="htttps://linkedin.com" target="_blank" class="white-text">
					<i class="fab fa-linkedin fa-4x"></i>
				</a>
				<a href="htttps://googleplus.com" target="_blank" class="white-text">
					<i class="fab fa-google-plus fa-4x"></i>
				</a>
				<a href="htttps://pinterest.com" target="_blank" class="white-text">
					<i class="fab fa-pinterest fa-4x"></i>
				</a>
			</div>
		</div>
	</div>
</section>

<!-- Section: Gallery -->
<section id="gallery" class="section section-gallery scrollspy">
	<div class="container">
		<h4 class="center">
			<span class="teal-text">Photo </span> Gallery
		</h4>
		<div class="row">
			{% for empresa in content['empresas'] %}
			<div class="col s12 m3">
				<img class="materialboxed responsive-img" src="data:{{empresa.formatoimagen}};base64,{{ empresa.rutaimagen }}" alt="">
			</div>
			{% endfor %}
		</div>
	</div>
</section>

<div class="modal fade" id="empresamodal" name="empresamodal" tabindex="-1" role="dialog" aria-labelledby="empresa-modal" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
		<div class="modal-header">
				<h5 align="center" class="modal-title" id="exampleModalLabel">Control de Empresas</h5>
			</div>
			<div class="modal-body">
			
				<form id="empresa-form">
					<br></br>
				<div class="row">
				<input type="hidden" id="idempresa" name="idempresa"></input>
					<div class="input-field s12">
						<i class="material-icons prefix">work</i>
						<input type="text" id="nombre" name="nombre" class="form-control">
						<label for="nombre">Nombre Empresa:</label>
					</div>
					<div class="input-field s12">
						<i class="material-icons prefix">add_location</i>
						<input type="text" id="direccion" name="direccion" class="form-control">
						<label for="direccion">Direccion de la Empresa:</label>
					</div>
					<div class="input-field s12">
						<i class="material-icons prefix">dialer_sip</i>
						<input type="text" id="telefono" name="telefono" class="form-control">
						<label for="telefono">Telefono de la Empresa:</label>
					</div>
					<div class="input-field s12">
						<i class="material-icons prefix">email</i>
						<input type="email" id="correo" name="correo" class="form-control">
						<label for="correo">Correo de Empresa:</label>
					</div>
					<div class="input-field s12">
						<i class="material-icons prefix">description</i>
						<input type="text" id="descripcion" name="descripcion" class="form-control">
						<label for="nodescripcionmbre">Descripcion de la Empresa:</label>
					</div>
				</div>
				<div class="row">
					<div class="col s12">
						<a class=" waves-light btn add-file black" name="addfile" id="addfile">
							<i class="material-icons left">unarchive</i>Subir imagen</a>
					</div>
				</div>
				<br></br>
	</div>
	<div class="modal-footer">
		<a id="empresas-guardar" title="Login"  class="ngl btn-floating btn-large  waves-light"><i class="material-icons">check</i></a>
		<a id="cancelar" title="Login" class="ngl btn-floating btn-large  waves-light red"><i class="material-icons">input</i></a>
	</div>
</form>

</div></div></div><div id="EliminarSiNo" name="EliminarSiNo" class="modal"><div class="modal-content">
<div class="modal-header">
<h5 class="modal-title" id="EliminarSiNo">¿Eliminar Registro?</h5>
</div></div><div class="modal-footer">
<a href="#!" class="modal-close waves-effect waves-green btn-flat" id="Aceptar" name="Aceptar">Aceptar</a>
<a href="#!" class="modal-close waves-effect waves-green btn-flat" id="Cerrar" name="Cerrar">Cerrar</a></div></div><!--Imagen--><form id="archivo" style="display:none"><input type="file" id="archivo" name="archivo"></form>




